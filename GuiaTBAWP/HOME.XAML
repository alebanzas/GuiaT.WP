<phone:PhoneApplicationPage 
    x:Class="GuiaTBAWP.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="800"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="False">

    <!--LayoutRoot contains the root grid where all other page content is placed-->
    <Grid x:Name="LayoutRoot">
        <controls:Panorama Title="Guia Transporte BA">
            <controls:Panorama.Background>
                <ImageBrush ImageSource="PanoramaBackground.png" Opacity=".35"/>
            </controls:Panorama.Background>
            
            <!--Panorama item one-->
            <controls:PanoramaItem Header="menú">
                <StackPanel>
                    <Button Height="80" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="420" Click="Button_Click_SUBE">
                        <TextBlock Text="tarjeta SUBE" />
                    </Button>
                    <Button Height="80" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="420" Click="Button_Click_Colectivos">
                        <TextBlock Text="colectivos" />
                    </Button>
                    <Button Height="80" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="420" Click="Button_Click_Subtes">
                        <TextBlock Text="red de subte" />
                    </Button>
                    <Button Height="80" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="420" Click="Button_Click_Trenes">
                        <TextBlock Text="trenes metropolitanos" />
                    </Button>
                </StackPanel>
            </controls:PanoramaItem>

            <!--Panorama item two-->
            <controls:PanoramaItem Header="¿qué es?">
                <ScrollViewer>
                    <StackPanel>
                        <RichTextBox VerticalAlignment="Top" TextWrapping="Wrap" Margin="12,0,0,0">
                            <Paragraph>
                                Guia Trasporte BA te ayuda a moverte por el area metropolitana de Buenos Aires (CABA y GBA)
                            </Paragraph>
                            <Paragraph></Paragraph>
                            <Paragraph>
                                Encuentra informacion sobre los principales medios de transporte:
                            </Paragraph>
                            <Paragraph>
                            </Paragraph>
                            <Paragraph>
                                •Colectivo: info lineas y recorridos.
                            </Paragraph>
                            <Paragraph></Paragraph>
                            <Paragraph>
                                •Subte: mapa de la red.
                            </Paragraph>
                            <Paragraph></Paragraph>
                            <Paragraph>
                                •Trenes: recorridos y ramales.
                            </Paragraph>
                            <Paragraph></Paragraph>
                            <Paragraph>
                                •Donde comprar y cargar tu tarjeta SUBE.
                            </Paragraph>
                        </RichTextBox>
                    </StackPanel>
                </ScrollViewer>
            </controls:PanoramaItem>

            <!--Panorama item three-->
            <controls:PanoramaItem Header="acerca de...">
                <ScrollViewer>
                    <TextBlock TextWrapping="Wrap" Margin="12,0,0,0">
						Desarrollado por BTB Solutions
                        <LineBreak /><LineBreak />
                        Encuentra toda la información sobre GuiaTBA, puntos de carga, de venta, y encuentra la ruta al punto mas cercano.
                        <LineBreak /><LineBreak />
                        <LineBreak /><LineBreak />
                        La aplicación no almacena ningún tipo de información personal, ubicacion, identificación de la red, ni del equipo. Solamente utiliza internet para obtener los puntos de carga y venta.
                    </TextBlock>
                </ScrollViewer>
            </controls:PanoramaItem>
        </controls:Panorama>
    </Grid>

    <!--Panorama-based applications should not show an ApplicationBar-->

</phone:PhoneApplicationPage>