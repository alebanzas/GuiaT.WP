<phone:PhoneApplicationPage 
    x:Class="GuiaTBAWP.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="800"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="False">

    <!--LayoutRoot contains the root grid where all other page content is placed-->
    <Grid x:Name="LayoutRoot" Background="#0092D7">
        <controls:Panorama Title="Guía Transporte BA">
            <controls:Panorama.Background>
                <ImageBrush ImageSource="/Images/background.jpg" />
            </controls:Panorama.Background>
            
            <!--Panorama item one-->
            <controls:PanoramaItem Header="menú" Orientation="Horizontal">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Background="#10283a" BorderBrush="Transparent" HorizontalContentAlignment="Left" Click="Button_Click_Subtes">
                            <StackPanel Margin="0,0,0,17" Orientation="Horizontal" Width="150" Height="150">
                                <Image Source="/Images/Home/subtes.png" Width="150" Height="150"/>
                                <StackPanel Margin="-150,130,0,0">
                                    <TextBlock Foreground="White" Margin="10,0,0,0" Text="SUBTES" TextWrapping="Wrap" Style="{StaticResource PhoneTextSmallStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                        <Button Background="#10283a" BorderBrush="Transparent" HorizontalContentAlignment="Left" Click="Button_Click_Colectivos">
                            <StackPanel Margin="0,0,0,17" Orientation="Horizontal" Width="150" Height="150">
                                <Image Source="/Images/Home/colectivos.png" Width="150" Height="150"/>
                                <StackPanel Margin="-150,130,0,0">
                                    <TextBlock Foreground="White" Margin="10,0,0,0" Text="COLECTIVOS" TextWrapping="Wrap" Style="{StaticResource PhoneTextSmallStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                        <Button Background="#10283a" BorderBrush="Transparent" HorizontalContentAlignment="Left" Click="Button_Click_Bicicletas">
                            <StackPanel Margin="0,0,0,17" Orientation="Horizontal" Width="150" Height="150">
                                <Image Source="/Images/Home/bicicletas.png" Width="150" Height="150"/>
                                <StackPanel Margin="-150,130,0,0">
                                    <TextBlock Foreground="White" Margin="10,0,0,0" Text="BICICLETAS" TextWrapping="Wrap" Style="{StaticResource PhoneTextSmallStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Background="#10283a" BorderBrush="Transparent" HorizontalContentAlignment="Left" Click="Button_Click_Trenes">
                            <StackPanel Margin="0,0,0,17" Orientation="Horizontal" Width="150" Height="150">
                                <Image Source="/Images/Home/trenes.png" Width="150" Height="150"/>
                                <StackPanel Margin="-150,130,0,0">
                                    <TextBlock Foreground="White" Margin="10,0,0,0" Text="TRENES" TextWrapping="Wrap" Style="{StaticResource PhoneTextSmallStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                        <Button Background="#10283a" BorderBrush="Transparent" HorizontalContentAlignment="Left" Click="Button_Click_SUBE">
                            <StackPanel Margin="0,0,0,17" Orientation="Horizontal" Width="150" Height="150">
                                <Image Source="/Images/Home/sube.png" Width="150" Height="150"/>
                                <StackPanel Margin="-150,130,0,0">
                                    <TextBlock Foreground="White" Margin="10,0,0,0" Text="SUBE" TextWrapping="Wrap" Style="{StaticResource PhoneTextSmallStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                        <Button Background="#10283a" BorderBrush="Transparent" HorizontalContentAlignment="Left" Click="Button_Click_Taxis">
                            <StackPanel Margin="0,0,0,17" Orientation="Horizontal" Width="150" Height="150">
                                <Image Source="/Images/Home/taxis.png" Width="150" Height="150"/>
                                <StackPanel Margin="-150,130,0,0">
                                    <TextBlock Foreground="White" Margin="10,0,0,0" Text="TAXIS" TextWrapping="Wrap" Style="{StaticResource PhoneTextSmallStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </controls:PanoramaItem>

            <!--Panorama item two-->
            <controls:PanoramaItem Header="¿qué es?">
                <ScrollViewer>
                    <StackPanel>
                        <RichTextBox VerticalAlignment="Top" TextWrapping="Wrap" Margin="12,0,0,0">
                            <Paragraph>
                                Guía Trasporte BA te ayuda a moverte por el area metropolitana de Buenos Aires (CABA y GBA)
                            </Paragraph>
                            <Paragraph></Paragraph>
                            <Paragraph>
                                Encuentra informacion sobre los principales medios de transporte:
                            </Paragraph>
                            <Paragraph>
                            </Paragraph>
                            <Paragraph>
                                •Colectivo: info lineas y recorridos.
                            </Paragraph>
                            <Paragraph></Paragraph>
                            <Paragraph>
                                •Subte: mapa de la red, horarios, lineas, estado del servicio, precios.
                            </Paragraph>
                            <Paragraph></Paragraph>
                            <Paragraph>
                                •Trenes: recorridos y ramales.
                            </Paragraph>
                            <Paragraph></Paragraph>
                            <Paragraph>
                                •Donde comprar y cargar tu tarjeta SUBE.
                            </Paragraph>
                        </RichTextBox>
                    </StackPanel>
                </ScrollViewer>
            </controls:PanoramaItem>

            <!--Panorama item three-->
            <controls:PanoramaItem Header="acerca de...">
                <ScrollViewer>
                    <TextBlock TextWrapping="Wrap" Margin="12,0,0,0">
						Desarrollado por BTB Solutions
                        <LineBreak /><LineBreak />
                        Encuentra toda la información sobre el transporte en Buenos Aires, puntos de carga, de venta de la tarjeta SUBE, y encuentra la ruta al punto mas cercano. Recorridos de colectivo, trenes y subte.
                        <LineBreak /><LineBreak />
                        <LineBreak /><LineBreak />
                        La aplicación no almacena ningún tipo de información personal, ubicación, identificación de la red, ni del equipo. Solamente utiliza internet para obtener los puntos de carga y venta.
                        <LineBreak /><LineBreak /><LineBreak /><LineBreak />
                        Notas de versión
                        <LineBreak /><LineBreak />
                        1.3 (próximamente): Frecuencias y horarios de trenes, mejoras de presentación.
                        <LineBreak /><LineBreak />
                        1.2 (05-04-2013): Correcciones de líneas de colectivo municipales. Agregado de sección horarios y frecuencias en subte, mas información de estaciones de subte.
                        <LineBreak /><LineBreak />
                        1.1: (29-03-2013) Correcciones de líneas de colectivo provinciales. Agregado de sección líneas y estaciones en subte, sección precio, seccion estado del servicio.
                        <LineBreak /><LineBreak />
                        1.0: (12-03-2013) Versión inicial. Recorridos de colectivos, mapa de la red de subte, recorridos de trenes metropolitanos, puntos de carga y venta de tarjeta SUBE.
                    </TextBlock>
                </ScrollViewer>
            </controls:PanoramaItem>
        </controls:Panorama>
    </Grid>

    <!--Panorama-based applications should not show an ApplicationBar-->

</phone:PhoneApplicationPage>