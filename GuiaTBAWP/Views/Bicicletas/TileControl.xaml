<UserControl x:Class="WPLugares.TileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Width="173" Height="173">

    <Grid x:Name="LayoutRoot" Width="173" Height="173" Background="{StaticResource PhoneAccentBrush}" d:DataContext="{d:DesignData /SampleData/TileDataSampleData.xaml}">
        <Image Margin="0" Width="173" Source="{Binding ImageSource}" HorizontalAlignment="Left" Stretch="Fill" />
        <TextBlock Height="119" Margin="4,4,3,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="24" Text="{Binding Text1}"/>
        <TextBlock Height="75" Margin="4,98,3,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="18" Text="{Binding Text2}"/>
    </Grid>
    
</UserControl>