                                <Grid>
                                    <Image x:Name="image" HorizontalAlignment="Right" Height="48" Source="/GuiaTBAWP;component/Resources/Icons/Route/SearchBlack.png" VerticalAlignment="Bottom" Width="48" Stretch="Fill" Visibility="Collapsed" Opacity="0"/>
